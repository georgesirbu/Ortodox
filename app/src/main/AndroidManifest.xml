<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.venombit3.ortodox">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/adMobID"/>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/cross" />

        <activity
            android:name="com.venombit3.ortodox.playlist_audio"
            android:label="Ortodox"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="venombit.com"
                    android:pathPrefix="/Ortodox" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="venombit.com"
                    android:path="/Ortodox/" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="venombit.com"
                    android:pathPattern="redirectScript.php" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="www.venombit.com"
                    android:pathPrefix="/Ortodox" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="www.venombit.com"
                    android:path="/Ortodox/" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="http"
                    android:host="www.venombit.com"
                    android:pathPattern="redirectScript.php" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.venombit3.ortodox.jurnal"
            android:label="Jurnal"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.venombit3.ortodox.radio"
            android:label="Radio"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.venombit3.ortodox.tv"
            android:label="Trinitas TV"
            android:screenOrientation="landscape"
            android:hardwareAccelerated="true"/>
        <activity
            android:name="com.venombit3.ortodox.calendar"
            android:label="Calendar"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.venombit3.ortodox.playlist_preferiti"
            android:label="Preferite"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.venombit3.ortodox.networkState"
            android:screenOrientation="portrait" />



        <receiver android:name=".NotificationBroadcast" >
            <intent-filter>
                <action android:name="com.venombit3.ortodox.previous"/>
                <action android:name="com.venombit3.ortodox.delete" />
                <action android:name="com.venombit3.ortodox.pause" />
                <action android:name="com.venombit3.ortodox.next" />
                <action android:name="com.venombit3.ortodox.play" />
            </intent-filter>
        </receiver>

    </application>

</manifest>